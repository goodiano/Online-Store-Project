@addTagHelper *, LazZiya.TagHelpers
@using TemplateProjectOne.Application.Services.Product.Product.Query.GetProductForSite;
@model GetProductForSiteDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int pageNumber = 1;
    int pageSize = 20;
    int.TryParse(Context.Request.Query["page"], out pageNumber);
    int.TryParse(Context.Request.Query["pageSize"], out pageSize);
}

<main>
    <div class="page-header text-center" style="background-image: url('~/SiteTemplaate/assets/images/page-header-bg.jpg')">
        <div class="container-fluid">
            <h1 class="page-title">تمام عرض بدون سایدبار<span>فروشگاه</span></h1>
        </div><!-- End .container-fluid -->
    </div><!-- End .page-header -->
    <nav aria-label="breadcrumb" class="breadcrumb-nav mb-2">
        <div class="container-fluid">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index-1.html">خانه</a></li>
                <li class="breadcrumb-item"><a href="#">فروشگاه</a></li>
                <li class="breadcrumb-item"><a href="#">بدون سایدبار</a></li>
                <li class="breadcrumb-item active" aria-current="page">تمام عرض</li>
            </ol>
        </div><!-- End .container-fluid -->
    </nav><!-- End .breadcrumb-nav -->

    <div class="page-content">
        <div class="container-fluid">
            <div class="toolbox">
                <div class="toolbox-left">
                    <a href="#" class="sidebar-toggler"><i class="icon-bars"></i>فیلتر ها</a>
                </div><!-- End .toolbox-left -->

                <div class="toolbox-center">
                    <div class="toolbox-info">
                        نمایش <span>12 از 56</span> محصول
                    </div><!-- End .toolbox-info -->
                </div><!-- End .toolbox-center -->

                <div class="toolbox-right">
                    <div class="toolbox-sort">
                        <label for="sortby">مرتب سازی بر اساس : </label>
                        <div class="select-custom">
                            <select name="sortby" id="sortby" class="form-control">
                                <option value="popularity" href="~/Product?Searchkey=@Context.Request.Query["SearchKey"]&CatId=@Context.Request.Query["CatId"]&ordering=MostVisited" role="tab" aria-controls="Most-visited" selected="selected">پربازدید ترین ها</option>
                                <option value="rating">بیشترین فروش</option>
                                <option value="date" href="~/Product?Searchkey=@Context.Request.Query["SearchKey"]&CatId=@Context.Request.Query["CatId"]&ordering=theNewest">تاریخ</option>
                            </select>
                        </div>
                    </div><!-- End .toolbox-sort -->
                </div><!-- End .toolbox-right -->
            </div><!-- End .toolbox -->

            <div class="products">
                <div class="row">
                    <div class="col-6 col-md-4 col-lg-4 col-xl-3 col-xxl-2">

                        @foreach (var item in Model.Products)
                        {
                            <div class="product">
                                <figure class="product-media">
                                    <a href="~/Product/Detail/@item.Id">
                                        <img src="~/@item.ImageSrc" alt="تصویر محصول"
                                         class="product-image">
                                    </a>

                                    <div class="product-action-vertical">
                                        <a href="#"
                                       class="btn-product-icon btn-wishlist btn-expandable">
                                            <span>
                                                افزودن
                                                به لیست علاقه مندی
                                            </span>
                                        </a>
                                    </div><!-- End .product-action -->

                                <div class="product-action action-icon-top">
                                        <a href="#" class="btn-product btn-cart"><span>افزودن به سبد</span></a>
                                        <a href="popup/quickView.html" class="btn-product btn-quickview"
                                       title="مشاهده سریع محصول"><span>مشاهده سریع</span></a>
                                        <a href="#" class="btn-product btn-compare"
                                       title="مقایسه"><span>مقایسه</span></a>
                                    </div>
                                    <!-- End .product-action -->
                            </figure><!-- End .product-media -->

                            <div class="product-body">

                                    <h3 class="product-title"><a href="~/Product/Detail/@item.Id">@item.Title</a></h3>
                                    <!-- End .product-title -->
                                <div class="product-price">
                                        @item.Price.ToString("n0") - تومان
                                    </div>


                                    <!-- End .product-price -->
                                <div class="ratings-container">

                                        <div class="ratings">
                                            <div class="ratings-val" style="@item.Star"></div>
                                            <!-- End .ratings-val -->
                                    </div><!-- End .ratings -->

                                </div><!-- End .rating-container -->
                                <div class="product-description" style="color:silver">
                                        موجودی در انبار:  @item.Inventory
                                    </div>
                                </div>
                                <!-- End .product-body -->
                        </div>

                            <!-- End .product -->
                        }
                    </div><!-- End .col-sm-6 col-lg-4 col-xl-3 -->
                </div><!-- End .products -->

                <div class="load-more-container text-center">
                    <a href="#" class="btn btn-outline-darker btn-load-more">
