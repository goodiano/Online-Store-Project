@addTagHelper *, LazZiya.TagHelpers
@using TemplateProjectOne.Application.Services.Product.Product.Query.GetProductForAdmin
@model AllProductDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Zero configuration table -->
        <section id="configuration">
            <div class="row">
                <div class="col-12">
                    <div class="card">

                        <div class="card-body collapse show">
                            <div class="card-block card-dashboard">
                                <p class="card-text">لیست محصولات</p>
                                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                                    <div class="col-sm-12">
                                        <table class="table table-striped table-bordered zero-configuration dataTable" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                                            <thead>
                                                <tr role="row">
                                                    <th class="sorting_asc">نام</th>
                                                    <th class="sorting_asc">دسته بندی</th>
                                                    <th class="sorting_asc">برند </th>
                                                    <th class="sorting_asc">قیمت </th>
                                                    <th class="sorting_asc">موجودی </th>
                                                    <th class="sorting_asc">نمایش در سایت؟ </th>
                                                    <th class="sorting_asc"> </th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @foreach (var item in Model.Products)
                                                {
                                                    <tr role="row">
                                                        <td>@item.Name</td>
                                                        <td>@item.Category</td>
                                                        <td>@item.Brand</td>
                                                        <td>@item.Price.ToString("n0")  تومان</td>
                                                        <td>@item.Inventory</td>
                                                        <td>@item.ShowOnSite</td>
                                                        <td>
                                                            <button class="btn btn-warning" onclick="ShowModalEditProduct('@item.Id' , '@item.Name' , '@item.Brand' ,  '@item.Price.ToString("n0")', '@item.Inventory', '@item.ShowOnSite' , '@item.Description')">ویرایش</button>
                                                            <button class="btn btn-danger" onclick="DeleteProduct('@item.Id')">حذف</button>
                                                            <a href="~/Admin/Product/Detail/@item.Id" class="btn btn-info">اطلاعات بیشتر</a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                                <div class="  text-center">
                                    <paging total-records="Model.RowCount"
                                            page-no="Model.CurrentPage"
                                            page-size="Model.PageSize"
                                            show-prev-next="true"
                                            show-total-pages="false"
                                            show-total-records="false"
                                            show-page-size-nav="true"
                                            show-first-numbered-page="true"
                                            show-last-numbered-page="true"
                                            query-string-key-page-no="Page"
                                            query-string-key-page-size="PageSize"
                                            gap-size="2">
                                    </paging>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>



@section Scripts
{
<link href="~/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/Sweetalert2/sweetalert2.min.js"></script>

<script>


    function DeleteProduct(Id) {
        swal.fire({
            title: 'حذف محصول',
            text: "کاربر گرامی از حذف محصول مطمئن هستید؟",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#7cacbe',
            confirmButtonText: 'بله',
            cancelButtonText: 'خیر'
        }).then((result) => {
            if (result.value) {
                var postData = {
                    'Id': Id,
                };

                $.ajax({
                    contentType: 'application/x-www-form-urlencoded',
                    dataType: 'json',
                    type: "POST",
                    url: "RemoveProduct",
                    data: postData,
                    success: function (data) {
                        if (data.isSuccess == true) {
                            swal.fire(
                                'موفق!',
                                data.message,
                                'success'
                            ).then(function (isConfirm) {
                                location.reload();
                            });
                        }
                        else {

                            swal.fire(
                                'هشدار!',
                                data.message,
                                'warning'
                            );

                        }
                    },
                    error: function (request, status, error) {
                        alert(request.responseText);
                    }

                });

            }
        })
    }
</Script>


<script>
     function Editproduct() {

            var Id = $("#Edit_Id").val();
            var Name = $("#Edit_Name").val();
            var Brand = $("#Edit_Brand").val();
            var Price = $("#Edit_Price").val();            
            var Inventory = $("#Edit_Inventory").val();
            var ShowOnSite = $("#Edit_ShowOnSite").val();
            var Description = $("#Edit_Description").val();

            var postData = {
                'Id': Id,
                'Name': Name,
                'Brand': Brand,          
                'Price': Price,                
                'Inventory': Inventory,
                'ShowOnSite': ShowOnSite,
                'Description': Description,

            };


            $.ajax({
                contentType: 'application/x-www-form-urlencoded',
                dataType: 'json',
                type: "POST",
                url: "EditProduct",
                data: postData,
                success: function (data) {
                    if (data.isSuccess == true) {
                        swal.fire(
                            'موفق!',
                            data.message,
                            'success'
                        ).then(function (isConfirm) {
                            location.reload();
                        });
                    }
                    else {
                        swal.fire(
                            'هشدار!',
                            data.message,
                            'warning'
                        );
                    }
                },
                error: function (request, status, error) {
                    alert(request.responseText);
                }
            });

            $('#EditProduct').modal('hide');

        }


        function ShowModalEditProduct(Id, Name ,Brand , Price, Inventory, ShowOnSite, Description) {
            $('#Edit_Id').val(Id)
            $('#Edit_Name').val(Name) 
            $("#Edit_Brand").val(Brand)
            $("#Edit_Price").val(Price)                     
            $("#Edit_Inventory").val(Inventory)                
            $("#Edit_ShowOnSite").val(ShowOnSite)
            $("#Edit_Description").val(Description)

            $('#EditProduct').modal('show');

        }
</script>
}






@section Modals
{
<!-- Modal Edit User -->
<div class="modal fade" id="EditProduct" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">ویرایش محصول</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-xl-12 col-lg-12 col-md-12 mb-1">
                    <fieldset class="form-group">
                        <input type="hidden" id="Edit_Id" />
                        <label for="basicInput">نام محصول</label>
                        <input type="text" class="form-control" id="Edit_Name">
                        <label for="basicInput">برند محصول</label>
                        <input type="text" class="form-control" id="Edit_Brand">
                        <label for="basicInput">قیمت محصول</label>
                        <input type="text" class="form-control" id="Edit_Price">
                        <label for="basicInput">موجودی محصول</label>
                        <input type="number" class="form-control" id="Edit_Inventory">
                        <label for="basicInput">نمایش در سایت </label>
                        <input type="text" class="form-control" id="Edit_ShowOnSite">
                        <label for="basicInput">توضیحات محصول</label>
                        <input type="text" class="form-control" id="Edit_Description">
                    </fieldset>
                </div>
            </div>
            <div class="modal-footer">
                <a class="btn btn-secondary" data-dismiss="modal">بستن</a>
                <a class="btn btn-primary" onclick="Editproduct()">اعمال تغییرات</a>
            </div>
        </div>
    </div>
</div>
}